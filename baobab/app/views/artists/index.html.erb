<h1>Listing artists</h1>
  <div class="table-responsive">
    <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Vat number</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @artists.each do |artist| %>
            <tr>
              <td><%= artist.name %></td>
              <td><%= artist.vat_number %></td>
              <td><%= link_to 'Show', artist_path(artist) %></td>
              <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
              <td><%= link_to 'Destroy', artist_path(artist), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
    </table>
    <%= link_to 'New Artist', new_artist_path %>
  </div>
<br>

