<h1>Artworks</h1>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th>Year</th>
          <th>On website</th>
          <th>Order status</th>
          <th>Height</th>
          <th>Width</th>
          <th>Depth</th>
          <th>Estimation</th>
          <th>Belongs to</th>
        </tr>
      </thead>

      <tbody>
        <% @artworks.each do |artwork| %>
          <tr>
            <td><%= link_to "#{artwork.title}", edit_artwork_path(artwork.id) %></td>
            <td><%= artwork.year %></td>
            <td><%= artwork.on_website %></td>
            <td><%= artwork.order_status %></td>
            <td><%= artwork.height %></td>
            <td><%= artwork.width %></td>
            <td><%= artwork.depth %></td>
            <td><%= artwork.estimation %></td>
            <td><%= artwork.artist.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'New Artwork', new_artwork_path %>
  </div>
<br>

