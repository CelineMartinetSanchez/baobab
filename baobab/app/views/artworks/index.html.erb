<h1>Listing artworks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>On website</th>
      <th>Order status</th>
      <th>Bibliography</th>
      <th>Condition report</th>
      <th>Edition type</th>
      <th>Provenance</th>
      <th>Signature</th>
      <th>Medium</th>
      <th>Comment</th>
      <th>Height</th>
      <th>Width</th>
      <th>Depth</th>
      <th>Estimation</th>
      <th>Belongs to</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @artworks.each do |artwork| %>
      <tr>
        <td><%= link_to "#{artwork.title}", edit_organization_artist_artwork_path(@organization, artwork.artist_id, artwork.id) %></td>
        <td><%= artwork.year %></td>
        <td><%= artwork.on_website %></td>
        <td><%= artwork.order_status %></td>
        <td><%= artwork.bibliography %></td>
        <td><%= artwork.condition_report %></td>
        <td><%= artwork.edition_type %></td>
        <td><%= artwork.provenance %></td>
        <td><%= artwork.signature %></td>
        <td><%= artwork.medium %></td>
        <td><%= artwork.comment %></td>
        <td><%= artwork.height %></td>
        <td><%= artwork.width %></td>
        <td><%= artwork.depth %></td>
        <td><%= artwork.estimation %></td>
        <td><%= artwork.artist.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

